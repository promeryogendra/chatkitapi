<!DOCTYPE html>
<html>
	<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<style>
	* {box-sizing: border-box;}

	body {
		margin: 0;
		font-family: Arial, Helvetica, sans-serif;
	}

	.header {
		overflow: hidden;
		background-color: rgb(42, 156, 122);
		padding: 20px 10px;
		color: white;
	}

	.header a {
		float: left;
		color: white;
		text-align: center;
		padding: 12px;
		text-decoration: none;
		font-size: 18px;
		line-height: 25px;
		border-radius: 4px;
	}

	.header a.logo {
		margin-top: 10px;
		width: 70px;
		height: 70px;
		font-weight: bold;
		border-radius: 50px;
		background-image: url("https://i.ibb.co/Pm2y7Qr/logo.png");
		background-repeat: no-repeat;
		background-size: 100%;
	}

	.header a:hover {
		background-color: #ddd;
		color: black;
	}

	.header a.active {
		background-color: dodgerblue;
		color: white;
	}

	.header-right {
		float: right;
	}
	.click {
		display: flex;
		cursor: pointer;
		text-decoration: none;
		color: white;
		font-weight: 500;
		padding: 10px 30px;
		border: 2px solid #ccc;
		background: #ff9800;
		margin: 0 auto;
		width: 120px;
	}
	.click:hover {
		background: white;
		border: 2px solid #ff9800;
		color: #ff9800;
	}
	@media screen and (max-width: 500px) {
		.header a {
			float: none;
			display: block;
			text-align: left;
		}

		.header-right {
			float: none;
		}
	}
	</style>
	</head>
	<body>
  <%
    let data_config = require('../data/email-host-config.json');
   %>
	<div class="header">
		<a href="#" class="logo"></a>
		<h1 style="margin: 20px 45%;">ChatKit</h1>
	</div>

	<div style="padding-left:20px">
		<div>
			<h1 style="text-align: center;">Your Registration was successful.</h1>
			<h3 style="text-align: center;">You are now ready to login..</h3>
			<a href='<%=data_config.hostaddress%>' class="click">Login</a>
		</div>
	</div>
</body>
</html>
